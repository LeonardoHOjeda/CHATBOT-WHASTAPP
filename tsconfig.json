{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",
    
    /* Modules */
    "baseUrl": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": ["@types", "node_modules/@types"],
    "paths": {
      "@src/*": ["src/*"],
      "@database/*": ["database/*"],
      "@entities/*": ["entities/*"],
      "@models/*": ["models/*"],
      "@middlewares/*": ["middlewares/*"],
      "@helpers/*": ["helpers/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"]
    },

    /* Emit */
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,

    /* Interop Constraint*/
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*", "@types/index.d.ts"],
  "exclude": ["node_modules", "build"]
}
